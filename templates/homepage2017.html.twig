{% extends 'partials/base.html.twig' %}

{% block content %}
    {{ page.content }}
    <div class="row">
    	<div class="medium-6 columns">
		    <h2>Recent Posts</h2>
		    {% for p in page.find('/dispatches').children.order('date', 'desc').slice(0, 5) %}
		        {% set bannerimage = p.media['banner.jpg'] %}
		        <div class="recent-post">
		            {% if bannerimage %}
		                <div class="recent-post-image">{{ bannerimage.cropZoom(60,60).quality(60) }}</div>
		            {% else %}
		                <div class="recent-post-image"><img src="{{ url('theme://images/logo.png') }}" width="60" height="60"></div>
		            {% endif %}
		            <div class="recent-post-text">
		                <h4><a href="{{p.url}}">{{ p.title }}</a></h4>
		                <p>4) By {% if p.header.attribution.author is not sameas(false) %}{{ p.header.attribution.author }}{% else %}{{ config.site.title }}{% endif %} / {{ p.date|date("M j, Y")}}</p>
		            </div>
		        </div>
		    {% endfor %}
    	</div>
    	<div class="medium-6 columns">
    		{% if config.plugins.facebook.enabled %}
    			{{ facebook_events() }}
    		{% endif %}

    		{{config.themes.dsa_grav.DSAsocial.twitter }}

    	</div>
    </div>
{% endblock %}